{
    "name": "TPB Proxy Resolver",
    "version": "1.3.0",
    "description": "Automatically load a working proxy for The Pirate Bay. Valid proxies are pulled from https://proxybay.github.io/",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["storage", "declarativeContent", "https://*/", "activeTab"],
    "browser_action": {
        "default_title": "Open The Pirate Bay",
        "default_icon": {
            "128": "images/logo.png"
        }
    },
    "icons": {
        "128": "images/logo.png"
    },
    "options_page": "options/options.html",
    "manifest_version": 2
  }