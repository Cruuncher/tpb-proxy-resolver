{
    "name": "TPB Proxy Resolver",
    "version": "1.0",
    "description": "Automatically load a working proxy for The Pirate Bay. Valid proxies are pulled from https://proxybay.github.io/",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["storage", "declarativeContent", "https://*/"],
    "page_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "128": "images/logo.png"
          }
    },
    "icons": {
        "128": "images/logo.png"
    },
    "options_page": "options/options.html",
    "manifest_version": 2
  }